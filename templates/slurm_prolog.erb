#!/bin/sh

# We specifically don't run this with errexit ('set -e') since a nonzero
# exit status from this script will drain the host.

PATH="$PATH:/usr/local/sbin:/sbin:/usr/sbin"

progname=${0##*/}
log() {
	logger -it "$progname"
}

# Adding linger per https://slurm.schedmd.com/pam_slurm_adopt.html#PAM_CONFIG
loginctl enable-linger $SLURM_JOB_USER

exit 0
